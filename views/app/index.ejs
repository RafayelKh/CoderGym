<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="/style.css">
  <title>CoderGym</title>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }
  </style>
</head>

<body>
  <div class="tasksBlock">
    <% for(var i = 0; i < tasksInfo.length; i++){ %>
      <button id='<%= tasksInfo[i].tasks[i].tests_id %>' class="eachTask">
          <%= tasksInfo[i].tasks[i].title %>
      </button>
    <% } %>
  </div>
  <div class="mainBlock">
    <p id="chooseText" style="position: absolute;font-size: 60px;color: black;text-align: center;">Choose some task</p>

    <div id='container'>
      <div id="editor" style="height: 500px;">
      </div>
    </div>
    <button style="display: none;" style="width: 100px;height: 50px;margin-left: 40%;" type="submit" id='submitBtn'>Submit</button>
    <div id='testBlock' style="display: none;">
      <% for(var i = 0; i < testsInfo.length; i++){ %>
        <div>
          <div>Test <%= i + 1 %></div>
          <div>
            <span>Input: </span>
            <span id='<%= i %>_input'><%= testsInfo[i].input.join(', ') %></span>
          </div>
          <div>
            <span>Expected Output Type: </span>
            <span id='<%= i %>_ex_type'><%= testsInfo[i].ex_output_type %></span>
          </div>
          <div>
            <span>Expected Output: </span>
            <span id='<%= i %>_ex_output'><%= testsInfo[i].ex_output %></span>
          </div>
          <div>
            <span style="font-weight: bold;">Output: </span>
            <span id='<%= i %>_output'><%= testsInfo[i].output %></span>
          </div>
          <div>
            <span>Output Type: </span>
            <span id='<%= i %>_output_type'><%= testsInfo[i].output %></span>
          </div>
          <div>
            <span>Passed: </span>
            <span id='<%= i %>_is_completed'><%= testsInfo[i].is_completed %></span>
          </div>
          <div>
            <p>Console: </p>
            <pre id='<%= i %>_full_text'><%= testsInfo[i].full_text %></pre>
          </div>
          <hr>
        </div>
      <% } %>

      <input id='task_title' type="hidden" value="">
      <input id='task_tests_id' type="hidden" value="">
    </div>
</div>
  
